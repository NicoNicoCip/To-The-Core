{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./bin",
        "rootDir": "."
    },
    "include": [
        "src/**/*",
        "objects/**/*",
        "node_modules/origami-runtime/src/global.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}